<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>About • Relm</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="min-h-screen bg-zinc-900 text-white">
    <main class="max-w-3xl mx-auto px-6 py-10">
      <a href="/home" class="text-2xl font-semibold tracking-tight inline-block mb-4">
        <span class="text-blue-400">R</span>elm
      </a>
      <header class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6 mb-8">
        <div class="flex items-start sm:items-center gap-4">
          <img
            src="<%= user.image %>"
            alt="avatar"
            class="w-14 h-14 sm:w-16 sm:h-16 rounded-full bg-zinc-700 object-cover"
          />
          <div class="min-w-0"> 
            <h1 class="text-lg sm:text-2xl font-semibold tracking-tight truncate">
              <%= user.name || user.username %>
            </h1>
            <p class="text-sm text-zinc-400">@<%= user.username %></p>
            <p class="text-sm text-zinc-400 mt-1 max-w-xs sm:max-w-none break-words">
              <%= user.bio || '' %>
            </p>
          </div>
        </div>

        <div class="flex items-center gap-2 mt-4 sm:mt-0">
          <a
            href="/posts/new"
            class="px-4 py-2 rounded-lg text-sm bg-gradient-to-r from-blue-600 to-indigo-600 hover:opacity-95"
          >
            New post
          </a>

          <a
            href="/profile/edit"
            class="px-4 py-2 rounded-lg text-sm border border-zinc-700 hover:bg-zinc-800"
          >
            Edit profile
          </a>
        </div>
      </header>

      <div class="flex items-center justify-between text-sm text-zinc-400 mb-6">
        <div>
          <span class="font-medium text-zinc-200"><%= Array.isArray(posts) ? posts.length : 0 %></span>
          <span class="ml-1">posts</span>
        </div>

        <div>
          <span>
            Member since
            <strong class="text-zinc-200">
              <%= user && user.createdAt ? dayjs(user.createdAt).format('DD MMM YYYY') : '-' %>
            </strong>
          </span>
        </div>
      </div>

      <nav class="flex gap-6 border-b border-zinc-800 pb-3 mb-6 text-sm">
        <a href="/profile" class="text-zinc-400 hover:text-white">Posts</a>
        <span class="pb-1 border-b-2 border-blue-500 font-medium">About</span>
        <a href="/profile/settings" class="text-zinc-400 hover:text-white">Settings</a>
      </nav>

      <section class="bg-zinc-800/60 p-6 rounded-2xl shadow-sm mb-6 text-sm text-zinc-300">
        <h2 class="text-lg font-medium mb-3">About</h2>

        <p class="leading-7 mb-4"><%= user.bio %></p>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
          <div>
            <div class="font-medium text-zinc-200">Email</div>
            <div class="mt-1 text-zinc-300"><%= user.email || '-' %></div>
          </div>

          <div>
            <div class="font-medium text-zinc-200">Date of birth</div>
            <div class="mt-1 text-zinc-300">
              <%= user.dateOfBirth ? dayjs(user.dateOfBirth).format('DD MMM YYYY') : '-' %>
            </div>
          </div>

          <div>
            <div class="font-medium text-zinc-200">Website</div>
          <div class="mt-1">
            <% if (user.website) { 
                const website =
                  user.website.startsWith('http://') || user.website.startsWith('https://')
                    ? user.website
                    : 'https://' + user.website;
            %>
              <a
                href="<%= website %>"
                target="_blank"
                rel="noopener noreferrer"
                class="text-blue-400 hover:underline break-all"
              >
                <%= user.website %>
              </a>
            <% } else { %>
              <span class="text-zinc-400">-</span>
            <% } %>
          </div>
          </div>


          <div>
            <div class="font-medium text-zinc-200">Total posts</div>
            <div class="mt-1 text-zinc-300"><%= Array.isArray(posts) ? posts.length : 0 %></div>
          </div>
        </div>
      </section>

      <section class="space-y-4">
        <h3 class="text-sm text-zinc-300 mb-2">Recent posts</h3>

        <% if (posts && posts.length) { %>
          <% posts.reverse().forEach(function(post) { %>
            <article class="p-4 rounded-lg bg-zinc-800/50">
              <a href="/posts/<%= post._id %>" class="block">
                <h4 class="font-medium text-zinc-100"><%= post.title %></h4>
                <div class="text-xs text-zinc-400 mt-1">
                  <%= dayjs(post.createdAt).format("DD MMM • HH:mm") %>
                </div>
                <p class="text-sm text-zinc-300 mt-2 whitespace-pre-line">
                  <% 
                    var preview = post.content ? String(post.content) : '';
                    var snippet = preview.length > 180 ? preview.substring(0, 180) + '...' : preview;
                  %>
                  <%= snippet %>
                </p>
              </a>
            </article>
          <% }); %>
        <% } else { %>
          <div class="text-sm text-zinc-500">No posts yet.</div>
        <% } %>
      </section>

      <footer class="mt-12 text-xs text-zinc-500">
        Logged in as <%= user.email %> ·
        <a href="/auth/signout" class="text-red-400 hover:underline ml-2">Logout</a>
      </footer>
    </main>
  </body>
</html>
