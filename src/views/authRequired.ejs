    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="min-h-screen bg-zinc-900 text-white">
    <main class="max-w-3xl mx-auto px-6 py-16">
            <a href="/home" class="text-2xl font-semibold tracking-tight inline-block mb-4">
        <span class="text-blue-400">R</span>elm
      </a>
      <section
        class="bg-zinc-800/60 backdrop-blur-sm rounded-2xl shadow-lg p-8 text-center"
      >
        <div class="mb-4">
          <h1 class="text-2xl font-semibold"><%= title %></h1>
          <p class="text-sm text-zinc-400 mt-1"><%= message %></p>
        </div>

        <div
          class="mt-6 flex flex-col sm:flex-row items-center justify-center gap-3"
        >
          <a
            href="/auth/signin"
            class="px-6 py-2 rounded-lg bg-gradient-to-r from-blue-600 to-indigo-600 text-sm font-medium"
          >
            Sign in
          </a>

          <a
            href="/createUser"
            class="px-6 py-2 rounded-lg border border-zinc-700 text-sm hover:bg-zinc-800"
          >
            Create account
          </a>

          <a
            href="/createGuest"
            class="px-6 py-2 rounded-lg text-sm bg-zinc-700/30 hover:bg-zinc-700"
          >
            Continue as guest
          </a>
        </div>

        <div class="mt-6 text-xs text-zinc-500">
          If you think this is a mistake, try clearing cookies or signing out
          then signing in again.
        </div>
      </section>

      <footer class="mt-8 text-center text-xs text-zinc-500">
        <a href="/" class="hover:underline text-zinc-400">Back to landing</a>
      </footer>
    </main>
  </body>
</html>
