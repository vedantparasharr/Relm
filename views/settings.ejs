<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Settings â€¢ <%= user.username %></title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="min-h-screen bg-zinc-900 text-white">
    <main class="max-w-3xl mx-auto px-6 py-10">

      <!-- Header (same visual as profile) -->
      <header class="flex items-start justify-between gap-6 mb-8">
        <div class="flex items-center gap-4">
          <img
            src="<%= user.image || 'default-avatar.png' %>"
            alt="avatar"
            class="w-16 h-16 rounded-full bg-zinc-700 object-cover"
          />
          <div>
            <h1 class="text-2xl font-semibold tracking-tight">
              <%= user.name || user.username %>
            </h1>
            <p class="text-sm text-zinc-400">@<%= user.username %></p>
            <p class="text-sm text-zinc-400 mt-1"><%= user.bio || '' %></p>
          </div>
        </div>

        <div class="flex items-center gap-2">
          <a
            href="/profile"
            class="px-3 py-2 rounded-lg text-sm border border-zinc-700 hover:bg-zinc-800"
          >
            Cancel
          </a>
        </div>
      </header>

      <!-- Settings form -->
      <section class="bg-zinc-800/60 p-6 rounded-2xl shadow-sm">
        <h2 class="text-lg font-medium mb-4">Account settings</h2>

        <form action="/profile/settings" method="POST" class="space-y-4" autocomplete="off" novalidate>
          <div class="grid gap-4 sm:grid-cols-2">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm mb-1 text-zinc-300">Full name</label>
              <input id="name" name="name" type="text" value="<%= user.name || '' %>"
                class="w-full px-3 py-2 rounded-lg bg-zinc-900/40 border border-zinc-700 placeholder-zinc-400 outline-none focus:ring-2 focus:ring-blue-500" />
            </div>

            <!-- Username -->
            <div>
              <label for="username" class="block text-sm mb-1 text-zinc-300">Username</label>
              <input id="username" name="username" type="text" value="<%= user.username || '' %>"
                class="w-full px-3 py-2 rounded-lg bg-zinc-900/40 border border-zinc-700 placeholder-zinc-400 outline-none focus:ring-2 focus:ring-blue-500" />
            </div>
          </div>

          <!-- Email (readonly) -->
          <div>
            <label for="email" class="block text-sm mb-1 text-zinc-300">Email</label>
            <input id="email" name="email" type="email" value="<%= user.email || '' %>" readonly
              class="w-full px-3 py-2 rounded-lg bg-zinc-900/30 border border-zinc-800 text-zinc-400 cursor-not-allowed" />
            <div class="text-xs text-zinc-500 mt-1">Email changes require verification. Contact support.</div>
          </div>

          <div class="grid gap-4 sm:grid-cols-2">
            <!-- Date of birth -->
            <div>
              <label for="dateOfBirth" class="block text-sm mb-1 text-zinc-300">Date of birth</label>
              <input id="dateOfBirth" name="dateOfBirth" type="date"
                value="<%= user.dateOfBirth ? dayjs(user.dateOfBirth).format('YYYY-MM-DD') : '' %>"
                class="w-full px-3 py-2 rounded-lg bg-zinc-900/40 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500" />
            </div>

            <!-- Website -->
            <div>
              <label for="website" class="block text-sm mb-1 text-zinc-300">Website</label>
              <input id="website" name="website" type="text" value="<%= user.website || '' %>"
                class="w-full px-3 py-2 rounded-lg bg-zinc-900/40 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500" />
            </div>
          </div>

          <!-- Image URL + preview -->
          <div>
            <label for="image" class="block text-sm mb-1 text-zinc-300">Profile image URL</label>
            <input id="image" name="image" type="text" value="<%= user.image || '' %>"
              class="w-full px-3 py-2 rounded-lg bg-zinc-900/40 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500" />
            <div class="mt-3 flex items-center gap-4">
              <div class="w-20 h-20 rounded-lg overflow-hidden bg-zinc-700">
                <img id="previewImage" src="<%= user.image || 'default-avatar.png' %>" alt="preview" class="w-full h-full object-cover" />
              </div>
              <div class="text-xs text-zinc-500">Paste a direct image URL to preview.</div>
            </div>
          </div>

          <!-- Bio -->
          <div>
            <label for="bio" class="block text-sm mb-1 text-zinc-300">Bio</label>
            <textarea id="bio" name="bio" rows="3" maxlength="120" class="w-full px-3 py-2 rounded-lg bg-zinc-900/40 border border-zinc-700 placeholder-zinc-400 resize-none outline-none focus:ring-2 focus:ring-blue-500"><%= user.bio || '' %></textarea>
            <div class="flex justify-between text-xs text-zinc-500 mt-1">
              <span id="bioCount"><%= (user.bio && user.bio.length) ? user.bio.length : 0 %></span>
              <span> / 120</span>
            </div>
          </div>

          <!-- Password change -->
          <div class="border-t border-zinc-800 pt-4">
            <h3 class="text-sm font-medium text-zinc-200 mb-2">Change password</h3>

            <div class="grid gap-4 sm:grid-cols-2">
              <div>
                <label for="currentPassword" class="block text-sm mb-1 text-zinc-300">Current password</label>
                <input id="currentPassword" name="currentPassword" type="password"
                  class="w-full px-3 py-2 rounded-lg bg-zinc-900/40 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500" />
              </div>

              <div>
                <label for="newPassword" class="block text-sm mb-1 text-zinc-300">New password</label>
                <input id="newPassword" name="newPassword" type="password"
                  class="w-full px-3 py-2 rounded-lg bg-zinc-900/40 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500" />
              </div>

              <div class="sm:col-span-2">
                <label for="confirmPassword" class="block text-sm mb-1 text-zinc-300">Confirm new password</label>
                <input id="confirmPassword" name="confirmPassword" type="password"
                  class="w-full px-3 py-2 rounded-lg bg-zinc-900/40 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500" />
              </div>
            </div>
          </div>

          <!-- Submit -->
          <div class="flex items-center gap-3 mt-2">
            <button type="submit" class="px-5 py-2 rounded-lg bg-gradient-to-r from-blue-600 to-indigo-600 text-sm font-medium hover:opacity-95">
              Save changes
            </button>

            <a href="/profile" class="px-4 py-2 rounded-lg border border-zinc-700 text-sm hover:bg-zinc-800">Back</a>

            <div class="text-xs text-zinc-500 ml-auto">Changes will be saved immediately.</div>
          </div>
        </form>
      </section>
    </main>

    <script>
      (function () {
        const imageInput = document.getElementById('image');
        const preview = document.getElementById('previewImage');
        const bioEl = document.getElementById('bio');
        const bioCount = document.getElementById('bioCount');

        imageInput.addEventListener('input', function () {
          const url = imageInput.value.trim();
          if (url) preview.src = url;
          else preview.src = 'default-avatar.png';
        });

        function updateBioCount() {
          const len = bioEl.value ? bioEl.value.length : 0;
          bioCount.textContent = len;
        }
        bioEl.addEventListener('input', updateBioCount);
        document.addEventListener('DOMContentLoaded', updateBioCount);
      })();
    </script>
  </body>
</html>
